{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "rules": {
    "no-empty-interface": false
  },
  "interface-name": [
    true,
    "always-prefix"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}